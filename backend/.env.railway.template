# Railway Backend Environment Variables Template
# Copy this file to .env.railway and fill in your actual values
# DO NOT commit this file with real values to git

# =============================================================================
# DATABASE CONFIGURATION (Automatically provided by Railway PostgreSQL service)
# =============================================================================
# These are automatically set by Railway when you add a PostgreSQL service
# DATABASE_URL=postgresql://user:password@host:port/database
# PGHOST=your-postgres-host.railway.internal
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=your-password
# PGDATABASE=railway

# Alternative manual database configuration (if not using Railway PostgreSQL)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password
# DATABASE_NAME=whatsapp_agent_db

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Port (automatically set by Railway)
# PORT=8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for JWT tokens
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS (for Vercel frontend integration)
# =============================================================================
# Add your Vercel app URLs here
ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,https://your-custom-domain.com,http://localhost:3000

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# OpenRouter (for AI functionality)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Twilio WhatsApp Business API
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token  
TWILIO_WHATSAPP_NUMBER=+14155238886
TWILIO_WEBHOOK_URL=https://your-railway-app.railway.app/api/whatsapp/webhook

# =============================================================================
# REDIS CONFIGURATION (if using background tasks)
# =============================================================================
# Railway Redis service (optional)
# REDIS_URL=redis://default:password@host:port

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Sentry (optional error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# APPLICATION SPECIFIC SETTINGS
# =============================================================================

# Restaurant/Business Settings
DEFAULT_RESTAURANT_NAME=Your Restaurant Name
DEFAULT_RESTAURANT_PHONE=+1234567890
DEFAULT_RESTAURANT_EMAIL=contact@yourrestaurant.com

# AI Agent Settings
AI_RESPONSE_LANGUAGE=auto  # auto, en, ar
MAX_CONVERSATION_HISTORY=10
RESPONSE_DELAY_SECONDS=2

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# =============================================================================
# DEVELOPMENT SETTINGS (only for development)
# =============================================================================
# Uncomment these for development mode
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENVIRONMENT=development